@model DEMOO.Models.Category

@{
    ViewBag.Title = "Edit";
}

<html>
<head>
    <link href="~/assets/css/category.css" rel="stylesheet" />
</head>
<body>
    <h2 style="text-align: center; padding: 2rem">CHỈNH SỬA CATEGORY</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />

            @Html.ValidationSummary(true, "", new
            {
                @class = "text- danger"
            })

            @Html.HiddenFor(model => model.Id)
            <div class="form-group">
                MÃ CATEGORY
                <div class="col-md-10">
                    @Html.EditorFor(model => model.IDCate, new
                    {
                    htmlAttributes = new { @class = "form-control", @readonly = "readonly" }
                    })
                    @Html.ValidationMessageFor(model => model.IDCate, "",
                    new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                TÊN CATEGORY
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NameCate, new
                    {
                    htmlAttributes = new { @class = "form-control" }
                    })
                    @Html.ValidationMessageFor(model => model.NameCate, "",
                    new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 mb-3 mt-3">

                    <input type="submit" value="LƯU" class="tnh" />

                </div>
            </div>
        </div>

    }
    <div class="back">
        @Html.ActionLink("TRỞ LẠI", "Index")
    </div>
</body>
</html>