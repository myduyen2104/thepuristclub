@model DEMOO.Models.Customer

@{
    ViewBag.Title = "Register";
    Layout = null;
}

<link href="~/assets/css/register.css" rel="stylesheet">
@using (Html.BeginForm("Register", "LoginCus"))
{
    @Html.ValidationSummary(true)
    <div class="signup-box">
        <div class="signup-header">
            <header>Sign Up</header>
        </div>
        <div class="input-box">
            <input type="text" class="input-field" placeholder="Name" id="name" name="NameCus" required>
            <input type="text" class="input-field" placeholder="Email" id="email" name="EmailCus" required>
            <input type="password" class="input-field" placeholder="Password" id="pwd" name="PassWordCus" required>
        </div>
        <div class="input-submit">
            <button type="submit" class="submit-button" id="submit"></button>
            <label for="submit">Sign Up</label>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Turn back", "Login", "LoginCus")
</div>